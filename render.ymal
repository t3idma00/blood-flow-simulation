services:
  # Backend Service
  - type: web
    name: bloodflow-backend
    env: python
    rootDir: backend
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn app.main:app  # change if entry file is different
    envVars:
      - key: PORT
        value: 10000

  # Frontend Service
  - type: static
    name: bloodflow-frontend
    rootDir: frontend
    buildCommand: ""
    staticPublishPath: ./
