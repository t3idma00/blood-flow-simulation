services:
  # Backend Service
  - type: web
    name: bloodflow-backend
    env: python
    rootDir: backend
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn -b 0.0.0.0:$PORT app.main:app

  # Frontend Service
  - type: static
    name: bloodflow-frontend
    rootDir: frontend
    buildCommand: ""
    staticPublishPath: ./
